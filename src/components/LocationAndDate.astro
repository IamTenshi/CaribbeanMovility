---
const locationUrl = 'https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3784.452258054211!2d-69.90061112480976!3d18.463162582619237!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8ea5623b60461339%3A0x6a3ba437697226a4!2sSheraton%20Santo%20Domingo%20Hotel!5e0!3m2!1ses!2sdo!4v1724178504501!5m2!1ses!2sdo';
const fulldate = 'Sábado 23 de Noviembre 2024';
const location = 'Sheraton Santo Domingo Hotel';
const date = '2024-11-23'
---

<section id="how-to-arrive" class="flex flex-col items-center justify-center">
  <div class="flex flex-col items-center justify-center w-full py-4 mx-8 font-bold text-white sm:flex-row gap-x-10 md:gap-x-16 lg:gap-x-20 bg-malted-mint-madness">
    <div class="flex items-center gap-1.5 lg:gap-2">
      <time datetime={date} class="text-lg lg:text-xl">{fulldate}</time>
    </div>
    <span>-</span>
    <div class="flex items-center gap-1.5 lg:gap-2">
      <span class="text-lg lg:text-xl">{location}</span>
    </div>
  </div>
  <div id="map" class="w-full h-60">
    <iframe 
      title="Ubicación"
      src={locationUrl}
      height="350"
      class="w-full h-full border-0"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade">
    </iframe>
  </div>
</section>
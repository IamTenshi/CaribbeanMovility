---
import { Image } from "astro:assets";

interface Charlist {
  image: ImageMetadata;
  name: string;
  title: string;
  description: string;
}

const { image, name, title, description } = Astro.props;
---

<div class="flex flex-col lg:flex-row gap-4">
  <div class="rounded lg:max-w-40 lg:min-w-40">
    <Image src={image} alt="Image" class="w-full h-full rounded-xl aspect-[16/20]" />
  </div>
  <div class="flex flex-col gap-y-6 lg:max-w-md">
    <div class="flex flex-col gap-y-1">
      <h3 class="text-xl lg:text-base font-semibold">{name}</h3>
      <h4 class="text-xl lg:text-base">{title}</h4>
    </div>
    <p class="text-lg lg:text-sm">{description}</p>
  </div>
</div>
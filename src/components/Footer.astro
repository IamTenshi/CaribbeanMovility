---
import { Image } from "astro:assets";
import logo from "../../public/logo.svg";
import { contact } from "../components/ContactSection.astro";

const addressLink = "https://www.google.com/maps/place/Metro+Plaza+Charles+Sumner/@18.478552,-69.949178,18z/data=!4m14!1m7!3m6!1s0x8eaf8b260ce570d3:0xecb7f7c7d7cabacb!2sMetro+Plaza+Charles+Sumner!8m2!3d18.4784807!4d-69.9491995!16s%2Fg%2F11sh4l3b9r!3m5!1s0x8eaf8b260ce570d3:0xecb7f7c7d7cabacb!8m2!3d18.4784807!4d-69.9491995!16s%2Fg%2F11sh4l3b9r?entry=ttu";
---

<footer class="flex flex-col items-center text-white bg-black p-14">
  <div class="flex justify-center w-full max-w-7xl">
    <div class="grid w-full gap-y-10 gap-x-15">
      <div class="">
        <Image src={logo} alt="Logo" class="w-full max-w-40" />
      </div>
      <div class="flex flex-col gap-3">
        <h4 class="text-lg italic font-extrabold ">Secciones</h4>
        <ul class="flex flex-col text-lg gap-y-2">
          <li><a href="/">Inicio</a></li>
          <li><a href="#who-we-are">Quiénes somos</a></li>
          <li><a href="#partners">Patrocinadores</a></li>
          <li><a href="#why-assist">¿Por qué participar?</a></li>
          <li><a href="#charlists">Charlistas</a></li>
          <li><a href="#how-to-arrive">Como llegar</a></li>
          <li><a href="#contact">Contacto</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-3">
        <h4 class="text-lg italic font-extrabold ">Contáctanos</h4>
        <ul class="flex flex-col text-lg gap-y-2">
          <li>
            <a href={`mailto:${contact.email}`}>{contact.email}</a>
          </li>
          <li>
            <a href={`tel:${contact.phone}`}>{contact.phone}</a>
          </li>
        </ul>
      </div>
      <div class="flex flex-col gap-3">
        <h4 class="text-lg italic font-extrabold ">Ubicación</h4>
        <ul class="flex flex-col text-lg gap-y-2">
          <li>
            <a href={addressLink}>Ave. Charles Summer, Metro Plaza, #123</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>

<style>
  @media (min-width: 1024px) {
    footer div:first-child {
      grid-template-columns: repeat(4, minmax(0, auto));
    }
  }
</style>
---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import WhoWeAre from '../components/WhoWeAre.astro';
import Partners from '../components/Partners.astro';
import WhyAssist from '../components/WhyAssist.astro';
import TargetAudience from '../components/TargetAudience.astro';
import Booking from '../components/Booking.astro';
import Charlists from '../components/Charlists.astro';
import ParallaxImage from '../components/ParallaxImage.astro';
import LocationAndDate from '../components/LocationAndDate.astro';
import ContactSection from '../components/ContactSection.astro';
import Footer from '../components/Footer.astro';

import parallaxImageUrl from '../../public/images/parallax-img.png';
import background from '../../public/images/why-assist-bg.png';

import { Image } from 'astro:assets';
---

<Layout canonical="" description="Caribbean Mobility" image="/logo.svg" title="Caribbean Mobility">
	<Header />
	<main>
		<Hero />
		<WhoWeAre />
		<Partners />
		<div class="flex flex-col relative px-8 py-24 text-white gap-y-16 bg-downriver md:px-16 lg:px-24">
			<Image src={background} alt="patron de ondas" class="absolute inset-0 object-cover w-full h-full"/>
			<WhyAssist />
			<TargetAudience />
		</div>
		<Booking />
		<Charlists />
		<ParallaxImage imageUrl={parallaxImageUrl.src} />
		<LocationAndDate />
		<ContactSection />
	</main>
  <Footer />
</Layout>